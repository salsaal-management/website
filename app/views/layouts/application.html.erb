<!DOCTYPE html>
<html>
<head>

	<%= favicon_link_tag 'favicon.png' %>
		
	<!-- font awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">


	<title>Salsaal Integeration Association Inc.</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar_id"> <!-- START OF NAVIGATION BAR -->
		<div class="container"><!-- START OF CONTAINER -->
			<div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			    </button>
			    <%= link_to image_tag("logo.png", class: "img-responsive"), root_path, class:"name" %>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav" id="navbar_menus">
				  <li><%= link_to "Home", root_path%></li>
				  <li><%= link_to "About Us", pages_about_path%></li>
				  <li><%= link_to "Latest News", posts_path %></li>

				  <li class="dropdown">
				    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Programs <b class="caret"></b></a>
				    <ul class="dropdown-menu">
				      <li><%= link_to "Refugees", programs_refugees_path%></li>
				      <li><%= link_to "Social & Cultural", programs_social_and_cultural_path%></li>
				      <li><%= link_to "Women", programs_women_path%></li>
				    </ul>
				  </li>
				  <li class="dropdown">
				    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Student Branches <b class="caret"></b></a>
				    <ul class="dropdown-menu">
				      <li><%= link_to "Curtin Salsaal Students Association", student_branches_curtin_salsaal_path%></li>
				    </ul>
				  </li>
				  
				  <li><%= link_to "Contact Us", new_contact_path %></li>

				  <% if user_signed_in? %>
					<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
				  <% end %>
				</ul>
			</div>
		</div><!-- END OF CONTAINER -->
	</nav><!-- END OF NAVIGATION BAR -->

	<% if notice %>
		<p class="notice"><%= notice %></p>
	<% elsif alert%>
       <p class="alert"><%= alert %></p>
    <% end %>


	<%= yield %>

	<footer id="main_footer">
		<p class="copyright">&copy; 2015 Salsaal Integration Association Inc.</p>
		<nav>
			<i class="fa fa-mobile fa-lg" id="mobile"> +61 449 894 366</i>
			<a href="https://www.facebook.com/Salsaal-Integration-Association-Inc-Perth-WA-1508366149425822" target="_blank"><i class="fa fa-facebook fa-lg" id="icons"></i></a>
			<a href="https://www.twitter.com" target="_blank"><i class="fa fa-twitter fa-lg" id="icons"></i></a>
		</nav>
	</footer>

</body>
</html>
