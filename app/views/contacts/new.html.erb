<div class="contact_header">
	<h1>Contact Us</h1>
	<br>
	<i class="fa fa-mobile" id="mobile"> +61 449 894 366</i><br>
	<i class="fa fa-envelope"> admin@salsaal.org.au | president@salsaal.org.au</i>
</div>
<div class="skinny_wrapper wrapper_padding">
	<%= form_for @contact do |f| %>
		<%= f.label :name %> <br>
		<%= f.text_field :name, required: true %>

		<br>

		<%= f.label :email %> <br>
		<%= f.text_field :email, required: true %>
		<br>


		<%= f.label :message %> <br>
		<%= f.text_area :message, as: :text %>

		<div class="hidden">
			<%= f.label :nickname %> <br>
			<%= f.text_area :nickname, hint: 'used to detect spam' %>
		</div>
		<br>
		<br>
		<%= f.submit 'Send Message', class: "button"%>
	<% end %>

</div>